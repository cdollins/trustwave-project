<?xml version="1.0" encoding="UTF-8"?>

<!--
  - Logging configuration used for all unit and integration tests.
  -
  - $Id: logback.xml 3273 2010-02-17 22:30:24Z seth $
  -->

<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{HHmmss.SSS} | %.-4level | %-36.36logger{36} | %msg%n</Pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.trustwave" level="WARN"/>

</configuration>
